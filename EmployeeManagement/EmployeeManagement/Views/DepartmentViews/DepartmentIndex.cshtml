@model IEnumerable<Employee.Model.Department>

@{
    ViewData["Title"] = "DepartmentIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Department List</h1>

<p style="text-align:right;margin-right:20px">
    <a class="btn btn-primary" asp-action="DepartmentAddEdit">Create New</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model=>model.Department_Name)
                </th>
                <th></th>
                <th style="text-align:right">Edit</th>
                <th style="text-align:right">Details</th>
                <th style="text-align:right;margin-right:20px">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model=>item.Department_Name)
                    </td>
                    <td style="text-align:right" class="text-center">
                        <a asp-action="DepartmentAddEdit" class="btn btn-primary" asp-route-departmentId="@item.Department_Id">Edit</a>
                    </td>
                    <td style="text-align:right" class="text-center">
                        <a asp-action="DepartmentDetails" class="btn btn-info" asp-route-departmentId="@item.Department_Id">Details</a>
                    </td>
                    <td style="text-align:right" class="text-center">
                        <form asp-action="DepartmentDelete" asp-route-departmentId="@item.Department_Id">
                            <input type="hidden" asp-for="@item.Department_Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
